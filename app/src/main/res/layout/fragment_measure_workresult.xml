<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/measure_setting_frag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/measure_bg_result">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/measure_layout_hand"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:fontFamily="@font/orbitronbold"
                    android:gravity="center"
                    android:text="방향 선택 : "
                    android:textColor="@android:color/background_light"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:id="@+id/measure_bg_rl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:background="@drawable/measure_btn_right">

                    <Button
                        android:id="@+id/measure_btn_sel_result_right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center|right"
                        android:background="#00000000"></Button>

                    <Button
                        android:id="@+id/measure_btn_sel_result_left"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center|right"
                        android:background="#00000000"></Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:fontFamily="@font/orbitronbold"
                    android:gravity="center"
                    android:text="결과 선택 : "
                    android:textColor="@android:color/background_light"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:id="@+id/measure_bg_am"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:background="@drawable/measure_btn_avg">


                    <Button
                        android:id="@+id/measure_btn_sel_result_avg"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center|right"
                        android:background="#00000000"></Button>

                    <Button
                        android:id="@+id/measure_btn_sel_result_max"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center|right"
                        android:background="#00000000"></Button>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/measure_bg_resultvelue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_avg_avg_speed"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:fontFamily="@font/orbitronbold"
                        android:gravity="center"
                        android:text="0.0"
                        android:textColor="@android:color/background_light"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/txt_avg_max_speed"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:fontFamily="@font/orbitronbold"
                        android:gravity="center"
                        android:text="0.0"
                        android:textColor="@android:color/background_light"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="gone"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_max_avg_speed"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:fontFamily="@font/orbitronbold"
                        android:gravity="center"
                        android:text="0.0"
                        android:textColor="@android:color/background_light"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/txt_max_max_speed"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:fontFamily="@font/orbitronbold"
                        android:gravity="center"
                        android:text="0.0"
                        android:textColor="@android:color/background_light"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="gone"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_avg_avg_power"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:fontFamily="@font/orbitronbold"
                        android:gravity="center"
                        android:text="0.0"
                        android:textColor="@android:color/background_light"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/txt_avg_max_power"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:fontFamily="@font/orbitronbold"
                        android:gravity="center"
                        android:text="0.0"
                        android:textColor="@android:color/background_light"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="gone"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_max_avg_power"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:fontFamily="@font/orbitronbold"
                        android:gravity="center"
                        android:text="0.0"
                        android:textColor="@android:color/background_light"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/txt_max_max_power"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:fontFamily="@font/orbitronbold"
                        android:gravity="center"
                        android:text="0.0"
                        android:textColor="@android:color/background_light"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="gone"></TextView>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>