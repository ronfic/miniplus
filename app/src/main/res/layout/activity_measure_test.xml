<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/measure_bg">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="right"
            android:background="@drawable/measure_bg_titlebar">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">

                <Button
                    android:id="@+id/btn_measure_user_change"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@drawable/measure_btn_logon" />

                <Button
                    android:id="@+id/measure_btn_totalresult"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/measure_btn_result"></Button>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="11"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/measure_setting_frag"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/measure_btn_1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/measure_btn_press_1"></Button>

                            <Button
                                android:id="@+id/measure_btn_2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/measure_btn_2"></Button>

                            <Button
                                android:id="@+id/measure_btn_3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/measure_btn_3"></Button>

                            <Button
                                android:id="@+id/measure_btn_4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/measure_btn_4"></Button>

                            <Button
                                android:id="@+id/measure_btn_5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/measure_btn_5"></Button>

                            <Button
                                android:id="@+id/measure_btn_6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/measure_btn_6"></Button>

                            <Button
                                android:id="@+id/measure_btn_7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/measure_btn_7"></Button>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/measure_bg_select_1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:background="@drawable/measure_btn_select" />

                            <ImageView
                                android:id="@+id/measure_bg_select_2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:background="@drawable/measure_btn_select" />

                            <ImageView
                                android:id="@+id/measure_bg_select_3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:background="@drawable/measure_btn_select" />

                            <ImageView
                                android:id="@+id/measure_bg_select_4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:background="@drawable/measure_btn_select" />

                            <ImageView
                                android:id="@+id/measure_bg_select_5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:background="@drawable/measure_btn_select" />

                            <ImageView
                                android:id="@+id/measure_bg_select_6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:background="@drawable/measure_btn_select" />

                            <ImageView
                                android:id="@+id/measure_bg_select_7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:background="@drawable/measure_btn_select" />


                        </LinearLayout>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/measure_layout_title_muscular"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="@drawable/measure_bg_muscular"></LinearLayout>


                        <Button
                            android:id="@+id/measure_btn_mode"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:background="@drawable/measure_btn_mode_two"></Button>

                        <Button
                            android:id="@+id/measure_btn_start"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/measure_btn_start"></Button>

                        <Button
                            android:id="@+id/btn_pause"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/measure_btn_pause"
                            android:visibility="gone"></Button>

                        <Button
                            android:id="@+id/measure_btn_back"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/measure_btn_back"></Button>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/measure_bg_guide">

                    <TextView
                        android:id="@+id/txt_measure_guide"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/orbitronbold"
                        android:gravity="center"
                        android:text="총 7가지의 검사항목이 존재하며\n화면의 영상을 참고하여 각 항목별\n검사를 5회씩 측청하여 주세요."
                        android:textColor="@android:color/background_light"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="5dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/measure_bg_linechart">

                    <LinearLayout
                        android:id="@+id/measure_linechart_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:padding="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="30dp">

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/measure_linechart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/measure_bg_barchart_layout_able"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingRight="20dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone"
                    android:background="@drawable/measure_bg_barchart_able">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.github.mikephil.charting.charts.HorizontalBarChart
                            android:id="@+id/measure_barchart"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/measure_bg_barchart_layout_unable"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/measure_bg_barchart_unable"></LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
