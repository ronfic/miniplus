<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/init_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_marginLeft="50px"
            android:textSize="25sp"
            android:text="업데이트가 있습니다.\n업데이트를 진행 하시겠습니까?"
            android:textColor="@android:color/black"
            android:fontFamily="@font/orbitronregular"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="100px"
                android:layout_weight="1"
                android:gravity="center|right"
                android:textSize="20sp"
                android:text="Now version : "
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/txt_nowVersion"
                android:layout_width="0dp"
                android:layout_height="100px"
                android:layout_weight="1.5"
                android:gravity="center|left"
                android:textSize="20sp"
                android:text="1.1.0"
                android:textColor="@android:color/holo_blue_dark"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="100px"
                android:layout_weight="1"
                android:gravity="center|right"
                android:textSize="20sp"
                android:text="New version : "
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/txt_newVersion"
                android:layout_width="0dp"
                android:layout_height="100px"
                android:layout_weight="1.5"
                android:gravity="center|left"
                android:textSize="20sp"
                android:text="1.1.1"
                android:textColor="@android:color/holo_blue_dark"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:gravity="center"/>


        <ProgressBar
            android:id="@+id/progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="900px"
            android:layout_height="wrap_content"
            android:progress="0" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_yes"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textSize="30sp"
                android:text="YES"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_blue_dark"/>
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"/>
            <Button
                android:id="@+id/btn_no"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textSize="30sp"
                android:text="NO"
                android:textColor="@android:color/white" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>