<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    tools:context=".LoginPadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="80dp"
        android:background="@drawable/pad"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/userGroupLoginBtn"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Group Login"></Button>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6">

                    <ListView
                        android:id="@+id/userGroup_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></ListView>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/password_box"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/blank"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_marginBottom="15dp"
                        android:password="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="20dp">

                        <Button
                            android:id="@+id/one"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@android:color/background_dark"
                            android:background="@drawable/btn_1"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/two"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_2"
                            android:gravity="center"
                            android:textColor="@android:color/background_dark"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/three"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_3"
                            android:gravity="center"
                            android:textColor="@android:color/background_dark"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_Delete"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_delete"
                            android:gravity="center"
                            android:textColor="@android:color/background_dark"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="20dp">

                        <Button
                            android:id="@+id/four"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/btn_4"
                            android:textSize="20dp"
                            android:layout_margin="2dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/background_dark"

                            android:gravity="center" />

                        <Button
                            android:id="@+id/five"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="20dp"
                            android:layout_margin="2dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/background_dark"
                            android:background="@drawable/btn_5"
                            android:gravity="center" />

                        <Button
                            android:id="@+id/six"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="20dp"
                            android:layout_margin="2dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/background_dark"
                            android:background="@drawable/btn_6"
                            android:gravity="center" />

                        <Button
                            android:id="@+id/btn_Delete_all"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/delete_all"
                            android:gravity="center"
                            android:textColor="@android:color/background_dark"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="20dp">

                        <Button
                            android:id="@+id/seven"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="35dp"
                            android:layout_margin="2dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/background_dark"
                            android:background="@drawable/btn_7"
                            android:gravity="center" />

                        <Button
                            android:id="@+id/eight"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="35dp"
                            android:layout_margin="2dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/background_dark"
                            android:background="@drawable/btn_8"
                            android:gravity="center" />

                        <Button
                            android:id="@+id/nine"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="35dp"
                            android:layout_margin="2dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/background_dark"
                            android:background="@drawable/btn_9"
                            android:gravity="center" />

                        <Button
                            android:id="@+id/btn_login"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="35dp"
                            android:layout_margin="2dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/background_dark"
                            android:background="@drawable/btn_login_ok"
                            android:gravity="center" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="20dp">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="35dp"
                            android:layout_margin="2dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/background_dark"
                            android:background="@android:color/transparent"

                            android:gravity="center" />

                        <Button
                            android:id="@+id/zero"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="35dp"
                            android:layout_margin="2dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/background_dark"
                            android:background="@drawable/btn_0"
                            android:gravity="center" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:textColor="@android:color/background_dark"
                            android:textSize="35dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_cancel"
                            android:background="@drawable/btn_cancelok"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@android:color/background_dark"
                            android:textSize="35dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>